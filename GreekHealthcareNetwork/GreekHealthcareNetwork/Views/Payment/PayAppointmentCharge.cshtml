            var timeoutVar = setTimeout(function () {
                window.location.replace('/Insureds/CancelledBookingDueToNotPayingOnTime?appointmentId=' + '@Model.AppointmentId' + '&insuredId=' + '@CurrentUserId');
            }, 10*60*1000);
