@model GreekHealthcareNetwork.Models.DoctorSearchViewModel

<form id="searchDoctors" class="form-inline my-3 px-2" method="get" action="@Url.Action("SearchResults", "SearchDoctors")">
    @Html.TextBoxFor(m => m.DoctorFirstName, new { @class = "form-control mr-sm-2 my-2", type = "search", placeholder = "First Name", aria_label = "Search" })
    @Html.TextBoxFor(m => m.DoctorLastName, new { @class = "form-control mr-sm-2 my-2", type = "search", placeholder = "Last Name", aria_label = "Search" })
    <select name="DoctorSpecialty" class="form-control mr-2">
        <option value="-1"> All </option>
        @foreach (var item in Model.MedicalSpecialties)
        {
            <option value="@((int)item)">@item</option>
        }
    </select>
    <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Search</button>
</form>

