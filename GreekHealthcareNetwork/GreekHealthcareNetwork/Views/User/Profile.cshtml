@model GreekHealthcareNetwork.Models.ApplicationUser
]
    ViewBag.Title = "Profile";
}

@section cssScripts{
    <link href="@Url.Content("~/Content/TestPlaton.css")" type="text/css" rel="stylesheet" />
}

<main id="main">
    <div>
        <div class="col-md-5 offset-md-4">
            <div class="page-header">
                <h1>Profile</h1>
            </div>
            <div class="row" id="profileSection">
                <div class="col-md-4">
                    <img src="@Url.Content("~/Content/img/Doctors/")@Model.ProfilePicture" class="rounded-circle w-100 h-100" alt="">
                </div>
                <div class="col-md-8 align-self-center">
                    <h4>Golden Member</h4>
                    <p>Exp: @Model.SubscriptionEndDate</p>
                    <button type="button" class="btn btn-info">Renew</button>
                </div>
            </div>
            <div>
                <table class="table table-borderless mt-5">
                    <tbody>
                        <tr>
                            <th>Name:</th>
                            <td>
                                @Model.FirstName
                                <a href="#">
                                    <i class="far fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th>Last Name:</th>
                            <td>@Model.LastName</td>
                        </tr>
                        <tr>
                            <th>Date of birth:</th>
                            <td>@Model.DoB</td>
                        </tr>
                        <tr>
                            <th>AMKA:</th>
                            <td>@Model.AMKA</td>
                        </tr>
                        <tr>
                            <th>Address:</th>
                            <td>5th Klm Marathonos Av.</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th>Tel :</th>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>


